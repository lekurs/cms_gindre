{% extends "Back/admin.html.twig" %}

{% block title %}
    Shop : {{ shop.name }}
{% endblock %}

{% block container %}
    <div class="row content">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h2>{{ shop.name }}</h2>
            </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-12 col-sm-12 col-12">
                <h3>Contacts</h3>
                <div class="row contacts-container">
                {% for contact in shop.contacts %}
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4 contact-content">
                        <p>{{ contact.name }} - {{ contact.lastName }} <i class="fa fa-star{% if contact.main == 1 %} icon-contact-main {% endif %}"></i></p>
                        <p>{{ contact.email }}</p>
                        <div class="icon-contact-edit-container">
                            <p><i class="fa fa-edit contact-edit-icon" data-slug="{{ contact.id }}" data-shop="{{ shop.slug }}" data-toggle="modal" data-target="#editContact"></i></p>
                            <p><i class="fa fa-trash delete-contact" data-slug="{{ contact.slug }}"></i></p>
                        </div>
                    </div>
                {% endfor %}
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newContact">Ajouter Contact</button>
                    </div>
            </div>
        </div>
        <div class="row">
            <h2>Observations</h2>
            {% for message in shop.messages if message is not empty%}
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 message-container">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
                        <div class="row justify-content-center">
                            <h5 class="text-capitalize">{{ message.dateContact | date('d M Y') }}</h5>
                        </div>
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 icon-contact-edit-container">
                                <p><i class="fa fa-edit edit-message" data-id="{{ message.id }}"></i></p>
                                <p><i class="fa fa-trash"></i> </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6 message-content {% if loop.index is divisible by (2) %} inverse {% endif %}">
                        <p>{{ message.message |raw }}</p>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <p>aucune note</p>
            </div>
            {% endfor %}
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newMessage">Ajouter Message</button>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#newCommand">Ajouter une commande</button>
        </div>
    </div>
</div>


    <!-- Modal -->
    <div class="modal fade" id="newMessage" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit">Enregistrer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="newContact" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                        {{ form_start(formContact) }}
                        {{ form_widget(formContact) }}
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                        {{ form_end(formContact) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editContact" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal Edit</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12" id="edit-contact-form">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="newCommand" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Ajout d'une commande</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12" id="edit-contact-form">
                        {{ form_start(formOrder) }}
                        {{ form_widget(formOrder) }}
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                        {{ form_end(formOrder) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/edit-contact.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/delete-contact.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/message-edit-form.js') }}"></script>
<script>
    tinymce.init({
        selector: '#creation_message_form_message'
    });
</script>

{% endblock %}
{% extends "Back/admin.html.twig" %}

{% block title %}
    <title>Ajout d'un type de produit</title>
{% endblock %}

{% block container %}
    <div class=" page-title-info-client content">
        <i class="fas fa-grin fa-3x"></i>
        <h2>Clients</h2>
    </div>
    <div class="container-fluid content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 all-shops-container">
                <h2 class="title-shop-name">Clients</h2>
                <span class="button-title-container"><a href="{{ path('admin') }}"><button type="button" class="button-title"><i class="fas fa-arrow-alt-circle-right"></i> Retour</button> </a></span>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.address) }}
                {{ form_row(form.zip) }}
                {{ form_row(form.city) }}
                {{ form_row(form.number) }}
                {{ form_label(form.contact) }}
                <ul id="email-fields-list"
                    data-prototype="{{ form_widget(form.contact.vars.prototype)|e }}"
                    data-widget-tags="{{ '<div></div>'|e }}">
                    {% for contactField in form.contact %}
                        <li>
                            {{ form_errors(contactField) }}
                            {{ form_widget(contactField) }}
                        </li>
                    {% endfor %}
                </ul>
                <button type="button"
                        class="add-another-collection-widget"
                        data-list="#email-fields-list">Ajouter un contact</button>

                <button type="submit">Ajouter</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/add-collectiontype-widget.js') }}"></script>
{% endblock %}